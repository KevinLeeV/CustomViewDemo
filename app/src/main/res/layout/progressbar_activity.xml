<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kevin="http://schemas.android.com/apk/res/com.kevinlee.customviewdemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.kevinlee.customviewdemo.customview.progressbar.HorizontalProgressBar
            android:id="@+id/hpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            kevin:progress_reach_height="2dp"
            kevin:progress_unreach_height="1dp" />

        <com.kevinlee.customviewdemo.customview.progressbar.RoundProgressBar
            android:id="@+id/rpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:progress="30"
            kevin:progress_reach_height="2dp"
            kevin:progress_unreach_height="1dp" />

        <com.kevinlee.customviewdemo.customview.progressbar.CircleProgressBar
            android:id="@+id/cpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:progress="30"
            kevin:progress_color="@color/colorAccent" />

    </LinearLayout>

</ScrollView>